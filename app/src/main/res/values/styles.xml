<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Learnify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/figma_purple_main</item>
        <item name="colorPrimaryVariant">@color/figma_purple_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:windowBackground">@color/screen_background_light_blue</item>
        <item name="colorSurface">@color/card_surface</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_gray</item>
        <item name="android:textColor">@color/text_primary_dark</item>

        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="materialButtonStyle">@style/Widget.App.Button.Gradient</item>
        
        <!-- Navigation bar transparency -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_surface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#F0F0F0</item> </style>

    <style name="Widget.App.Button.Gradient" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_sign_up_gradient</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.Button.Large</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.App.Button.Stroked" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_secondary_gray</item>
        <item name="strokeColor">@color/text_secondary_gray</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textColorHint">@color/text_hint_gray_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.002</item>
        <item name="android:background">@drawable/bg_edittext_stroke</item>
        <item name="android:paddingStart">26dp</item>
        <item name="android:paddingEnd">26dp</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingBottom">17dp</item>
    </style>

    <style name="Widget.App.EditText.Large" parent="Widget.App.EditText">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Widget.App.EditText.OTP" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/bg_otp_box_default</item>
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/figma_purple_main</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="MaterialAlertDialog_Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.RoundedDialog</item>
        <item name="android:background">@color/card_surface</item>
        <item name="colorPrimary">@color/figma_purple_main</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
    </style>

    <style name="ShapeAppearance.App.RoundedDialog" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="TextAppearance.Header.Small" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.002</item>
    </style>

    <style name="TextAppearance.Body.Small.Medium" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary_gray</item>
        <item name="android:letterSpacing">0.002</item>
    </style>

    <style name="TextAppearance.Body.Small.Bold" parent="TextAppearance.Body.Small.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/figma_purple_main</item>
    </style>

    <style name="TextAppearance.Body.Faded" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary_gray_dark</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:letterSpacing">0.002</item>
    </style>

    <style name="TextAppearance.Button.Large" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="rippleColor">#33FFFFFF</item>
    </style>

    <style name="TextAppearance.Title.Splash" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/figma_purple_main</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:letterSpacing">0.002</item>
    </style>

    <style name="TextAppearance.Title.Onboarding" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:letterSpacing">0.002</item>
    </style>

    <style name="TextAppearance.Body.Onboarding" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary_gray</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:letterSpacing">0.002</item>
    </style>

    <style name="TextAppearance.Link.ForgotPassword" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_link_blue</item>
        <item name="android:letterSpacing">0.002</item>
    </style>

    <style name="TextAppearance.Separator" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_hint_gray_light</item>
        <item name="android:letterSpacing">0.002</item>
    </style>

    <style name="TextAppearance.ScreenTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">bold</item> <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:letterSpacing">0.002</item>
    </style>

    <style name="TextAppearance.ScreenSubtitle" parent="TextAppearance.ScreenTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/figma_purple_main</item>
    </style>

    <style name="TextAppearance.ProfileCard.Name" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">normal</item> <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:letterSpacing">0.002</item>
    </style>

    <style name="TextAppearance.ProfileCard.Role" parent="TextAppearance.ProfileCard.Name">
        <item name="android:textStyle">normal</item> <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Home.CardTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:letterSpacing">0.002</item>
    </style>

    <style name="TextAppearance.Home.SectionTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:letterSpacing">0.002</item>
    </style>

    <style name="TextAppearance.History.Title" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.History.Score" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#CCFFFFFF</item>
    </style>

    <style name="TextAppearance.History.ScoreValue" parent="TextAppearance.History.Score">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Home.ViewMore" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/figma_purple_main</item>
        <item name="android:letterSpacing">0.002</item>
    </style>

    <!-- =========================== -->
    <!-- Modern Typography System    -->
    <!-- =========================== -->

    <!-- Headline Styles -->
    <style name="TextAppearance.App.Headline1" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="TextAppearance.App.Headline2" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="TextAppearance.App.Title" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextAppearance.App.Body" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <!-- =========================== -->
    <!-- Modern Button Styles        -->
    <!-- =========================== -->

    <style name="Widget.App.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_sign_up_gradient</item>
        <item name="backgroundTint">@null</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>

    <style name="Widget.App.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/purple_main</item>
        <item name="strokeColor">@color/purple_main</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>

    <style name="Widget.App.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/manrope_font_family</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/purple_main</item>
        <item name="android:minHeight">48dp</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>

    <!-- =========================== -->
    <!-- Modern TextInputLayout      -->
    <!-- =========================== -->

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/border_light</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint_gray_light</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@android:color/transparent</item>
        <item name="itemBackground">@android:color/transparent</item>
    </style>

    <style name="ProfileOptionRow" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawableEnd">@drawable/ic_chevron_right</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="drawableTint">@color/figma_purple_main</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>


    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSecondaryContainer">#1A6A00FF</item>
        <item name="colorOnSecondaryContainer">@color/figma_purple_main</item>
    </style>

    <style name="Widget.App.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">56dp</item>
        <item name="android:height">32dp</item>
        <item name="android:color">@color/purple_soft</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>

    <!-- Chip Choice Style for Quiz Customizer -->
    <style name="Widget.App.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="chipMinHeight">40dp</item>
        <item name="chipStartPadding">16dp</item>
        <item name="chipEndPadding">16dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="rippleColor">@color/ripple_color</item>
    </style>
</resources>