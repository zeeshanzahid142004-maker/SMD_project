<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/screen_background_light_blue"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".progress_fragment"> <!-- Context points to the new Java file -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!--
        REMOVED:
        - Fake <ImageView> custom_status_bar
        -->

        <TextView
            android:id="@+id/screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-Learning Platform"
            style="@style/TextAppearance.ScreenTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="61dp"
            android:layout_marginStart="25dp" />

        <ImageView
            android:id="@+id/dots_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_dots_vertical"
            app:layout_constraintTop_toTopOf="@id/screen_title"
            app:layout_constraintBottom_toBottomOf="@id/screen_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:contentDescription="More options"/>

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notification"
            app:layout_constraintTop_toTopOf="@id/dots_icon"
            app:layout_constraintBottom_toBottomOf="@id/dots_icon"
            app:layout_constraintEnd_toStartOf="@id/dots_icon"
            android:layout_marginEnd="12dp"
            android:contentDescription="Notifications"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_card"
            android:layout_width="0dp"
            android:layout_height="129dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/screen_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_profile_card_gradient">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/profile_image"
                    android:background="@drawable/bg_profile_image_circle"
                    android:padding="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Profile Picture"/>

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="David Waley"
                    style="@style/TextAppearance.ProfileCard.Name"
                    app:layout_constraintTop_toTopOf="@id/profile_image"
                    app:layout_constraintStart_toEndOf="@id/profile_image"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:id="@+id/profile_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Web design"
                    style="@style/TextAppearance.ProfileCard.Role"
                    app:layout_constraintTop_toBottomOf="@id/profile_name"
                    app:layout_constraintStart_toStartOf="@id/profile_name" />

                <ImageView
                    android:id="@+id/edit_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit_dark"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="11dp"
                    android:layout_marginEnd="15dp"
                    android:contentDescription="Edit profile"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/screen_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tracking Your Progress"
            style="@style/TextAppearance.ScreenSubtitle"
            app:layout_constraintTop_toBottomOf="@id/profile_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="33dp" />

        <ImageView
            android:id="@+id/progress_illustration"
            android:layout_width="303dp"
            android:layout_height="303dp"
            android:src="@drawable/illustration_progress"
            app:layout_constraintTop_toBottomOf="@id/screen_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp"
            android:contentDescription="Progress illustration"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/start_learning_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Start Learning"
            style="@style/TextAppearance.Button.Large"
            android:background="@drawable/bg_sign_up_gradient"
            app:backgroundTint="@null"
            app:icon="@drawable/ic_arrow_right_white"
            app:iconGravity="end"
            app:iconPadding="8dp"
            app:layout_constraintTop_toBottomOf="@id/progress_illustration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="31dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>

        <!--
        REMOVED:
        - Fake <View> home_indicator
        -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>