<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_light_blue"
    tools:context=".VideoNotesFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <FrameLayout
        android:id="@+id/video_player_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#090909"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_middle">
        <FrameLayout
            android:id="@+id/video_loading_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1A000000"
            android:gravity="center"
            android:visibility="visible">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminate="true"/>

        </FrameLayout>

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/youtube_player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:autoPlay="false"


            />

        <!-- FULLSCREEN BUTTON -->
        <ImageView
            android:id="@+id/button_fullscreen"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_fullscreen"
            android:padding="6dp"
            android:layout_margin="12dp"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="end|top" />
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/notes_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/guideline_middle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="-30dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- TOOLBAR: formatting controls -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="12dp">

                    <ImageView
                        android:id="@+id/button_bold"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_format_bold"
                        android:background="@android:color/transparent"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="6dp" />

                    <ImageView
                        android:id="@+id/button_italic"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_format_italic"
                        android:background="@android:color/transparent"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        android:layout_marginStart="8dp"/>

                    <ImageView
                        android:id="@+id/button_underline"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_underline"
                        android:background="@android:color/transparent"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        android:layout_marginStart="8dp"/>

                    <ImageView
                        android:id="@+id/button_bullet"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_format_list_bulleted"
                        android:background="@android:color/transparent"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        android:layout_marginStart="8dp"/>

                    <ImageView
                        android:id="@+id/button_highlight"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_highlight"
                        android:background="@android:color/transparent"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        android:layout_marginStart="8dp"/>

                    <!-- Headings dropdown (simple three buttons for H1/H2/H3) -->
                    <ImageView
                        android:id="@+id/button_h1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_h1"
                        android:background="@android:color/transparent"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        android:layout_marginStart="12dp"/>

                    <ImageView
                        android:id="@+id/button_h2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_h2"
                        android:background="@android:color/transparent"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        android:layout_marginStart="8dp"/>

                    <ImageView
                        android:id="@+id/button_h3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_h3"
                        android:background="@android:color/transparent"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        android:layout_marginStart="8dp"/>

                    <!-- Undo / Redo / Save / Screenshot -->
                    <ImageView
                        android:id="@+id/button_undo"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_undo"
                        android:background="@android:color/transparent"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        android:layout_marginStart="12dp"/>

                    <ImageView
                        android:id="@+id/button_redo"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_redo"
                        android:background="@android:color/transparent"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        android:layout_marginStart="8dp"/>

                    <ImageView
                        android:id="@+id/button_save"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_save"
                        android:background="@android:color/transparent"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        android:layout_marginStart="12dp"/>

                    <ImageView
                        android:id="@+id/button_screenshot"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_screenshot"
                        android:background="@android:color/transparent"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:padding="6dp"
                        android:layout_marginStart="12dp"/>

                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">

                <EditText
                    android:id="@+id/notes_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Start taking notes..."
                    android:gravity="top|start"
                    android:padding="16dp"
                    android:background="@null"
                    android:inputType="textMultiLine"

                    android:textColor="@color/text_primary_dark"

                    android:textColorHint="@color/text_secondary_gray"/>
            </ScrollView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>