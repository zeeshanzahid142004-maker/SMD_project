<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Status Indicator (Left Bar) -->
        <View
            android:id="@+id/status_indicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Question Number -->
            <TextView
                android:id="@+id/tv_question_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 1"
                android:textSize="12sp"
                android:textColor="@color/text_secondary_gray"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Question Text -->
            <TextView
                android:id="@+id/tv_question_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="What is the capital of France?"
                android:textSize="16sp"
                android:textColor="@color/text_primary_dark"
                android:layout_marginBottom="16dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="12dp" />

            <!-- Your Answer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_user_answer_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Answer:"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_gray" />

                <TextView
                    android:id="@+id/tv_user_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Paris"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Correct Answer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_correct_answer_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correct Answer:"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_gray" />

                <TextView
                    android:id="@+id/tv_correct_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Paris"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Explanation (if available) -->
            <LinearLayout
                android:id="@+id/layout_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#F5F5F5"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tv_explanation_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Explanation:"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_gray"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_explanation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Paris is the capital and largest city of France."
                    android:textSize="13sp"
                    android:textColor="@color/text_primary_dark"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
