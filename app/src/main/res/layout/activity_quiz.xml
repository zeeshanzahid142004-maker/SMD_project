<?xml version="1.0" encoding="utf-8"?>
<!-- activity_quiz.xml containing next button timer and progress bar -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_light_blue"
    tools:context=".QuizActivity">

    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="09:59"
            style="@style/TextAppearance.Body.Small.Bold"
            android:textColor="@color/figma_red_error"
            android:layout_marginEnd="12dp"/>

        <ProgressBar
            android:id="@+id/quiz_progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:max="10"
            android:progress="0"
            android:progressDrawable="@drawable/bg_quiz_progress_bar"/>

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_questions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_cta_bar"/>

    <LinearLayout
        android:id="@+id/bottom_cta_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Coding Exercise Button (shown only for coding questions) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_coding"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/start_coding_exercise"
            android:textColor="@color/white"
            android:background="@drawable/bg_gradient_secondver"
            app:backgroundTint="@null"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            tools:visibility="visible"
            style="@style/Widget.App.Button.Gradient"
            />

        <!-- Next/Skip Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next_question"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/next_question"
            style="@style/Widget.App.Button.Gradient"
            android:enabled="false"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>