<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_quiz_complete_dialog -->
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quiz Complete!"
                style="@style/TextAppearance.Header.Small"
                android:layout_gravity="center_horizontal"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/dialog_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Body.Small.Medium"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                tools:text="Your score: 18/20"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1A000000"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                style="@style/TextAppearance.Button.Large"
                android:background="@drawable/bg_sign_up_gradient"
                app:backgroundTint="@null"
                app:cornerRadius="12dp"
                android:text="View Results"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_regenerate_quiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                style="@style/TextAppearance.Button.Large"
                android:background="@drawable/bg_gradient_blue_purple"
                app:backgroundTint="@null"
                app:cornerRadius="12dp"
                android:layout_marginTop="12dp"
                android:text="Regenerate Quiz"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_retake_quiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                style="@style/Widget.App.Button.Stroked"
                app:cornerRadius="12dp"
                android:layout_marginTop="12dp"
                android:text="Retake Quiz"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.core.widget.NestedScrollView>