<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        tools:context=".signup_activity">

        <!-- Guideline for horizontal centering -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.08"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.92"/>

        <ImageView
            android:id="@+id/sign_up_illustration"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/illustration_sign_up"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintHeight_percent="0.28"
            android:layout_marginTop="40dp"
            android:contentDescription="Illustration of person signing up"/>

        <TextView
            android:id="@+id/sign_up_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            style="@style/TextAppearance.Header.Small"
            app:layout_constraintTop_toBottomOf="@id/sign_up_illustration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/name_input"
            android:layout_width="0dp"
            android:layout_height="60dp"
            style="@style/Widget.App.EditText"
            android:hint="@string/name"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@id/sign_up_title"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="0dp"
            android:layout_height="60dp"
            style="@style/Widget.App.EditText"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/name_input"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            android:layout_marginTop="14dp" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="0dp"
            android:layout_height="60dp"
            style="@style/Widget.App.EditText"
            android:hint="@string/password"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/email_input"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            android:layout_marginTop="14dp" />

        <ImageView
            android:id="@+id/password_visibility_toggle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_eye_invisible"
            app:layout_constraintTop_toTopOf="@id/password_input"
            app:layout_constraintBottom_toBottomOf="@id/password_input"
            app:layout_constraintEnd_toEndOf="@id/password_input"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/cd_toggle_password" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sign_up_button"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:text="@string/sign_up"
            style="@style/TextAppearance.Button.Large"
            android:background="@drawable/bg_sign_up_gradient"
            app:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@id/password_input"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/or_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or"
            style="@style/TextAppearance.Separator"
            app:layout_constraintTop_toBottomOf="@id/sign_up_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="14dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/google_sign_up_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            style="@style/Widget.App.Button.Stroked"
            android:text="@string/sign_up_with_google"
            app:icon="@drawable/ic_google_logo"
            app:iconPadding="16dp"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/or_text"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_gradient_secondver"
            android:backgroundTint="@null"/>

        <LinearLayout
            android:id="@+id/log_in_prompt_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/google_sign_up_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/log_in_prompt_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_account"
                style="@style/TextAppearance.Body.Small.Medium" />

            <TextView
                android:id="@+id/log_in_prompt_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                style="@style/TextAppearance.Body.Small.Bold"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>