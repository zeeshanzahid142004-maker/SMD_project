<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="24dp"
    app:cardElevation="16dp"
    app:strokeColor="#F0F0F0"
    app:strokeWidth="1dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="500dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="32dp"
            android:paddingHorizontal="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Review"
                style="@style/TextAppearance.Header.Small"
                android:textSize="24sp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tv_review_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Body.Small.Medium"
                android:textColor="@color/figma_purple_main"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"
                tools:text="What is the capital of France?"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tv_review_your_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Body.Small.Medium"
                android:textColor="@color/figma_red_error"
                android:layout_marginBottom="8dp"
                tools:text="Your Answer: London"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/tv_review_correct_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Body.Small.Medium"
                android:textColor="@color/figma_green_correct"
                android:layout_marginBottom="16dp"
                tools:text="Correct Answer: Paris"/>

            <TextView
                android:id="@+id/tv_review_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Body.Small.Medium"
                android:textColor="@color/text_secondary_gray"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                tools:visibility="visible"
                tools:text="Paris has been the capital of France since the 12th century."/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_review_close"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Got It!"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_sign_up_gradient"
                app:backgroundTint="@null"
                app:cornerRadius="12dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</com.google.android.material.card.MaterialCardView>