<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/screen_background_light_blue"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:padding="24dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/figma_purple_main"
            app:cardPreventCornerOverlap="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="32dp"
                android:paddingHorizontal="16dp"
                android:background="@drawable/bg_profile_card_gradient">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_profile_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="2dp"
                        android:src="@drawable/ic_profile_inactive"
                        android:scaleType="centerCrop"
                        android:contentDescription="Profile Picture"/>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_edit"
                    android:background="@drawable/bg_profile_image_circle"
                    android:padding="6dp"
                    app:tint="@color/figma_purple_main"
                    android:elevation="8dp"
                    app:layout_constraintEnd_toEndOf="@id/card_avatar"
                    app:layout_constraintBottom_toBottomOf="@id/card_avatar"
                    android:contentDescription="Change Photo"/>

                <TextView
                    android:id="@+id/tv_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.Home.CardTitle"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="David Miller"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/card_avatar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.Body.Small.Medium"
                    android:textColor="#CCFFFFFF"
                    android:textSize="14sp"
                    tools:text="david.miller@example.com"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_profile_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            style="@style/TextAppearance.Header.Small"
            android:textSize="20sp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="4dp"
            app:strokeColor="#F0F0F0"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/row_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    style="@style/ProfileOptionRow"
                    app:drawableStartCompat="@drawable/ic_help"
                    app:drawableTint="@color/figma_purple_main"/>

                <View style="@style/Divider" />

                <TextView
                    android:id="@+id/row_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    style="@style/ProfileOptionRow"
                    app:drawableStartCompat="@drawable/ic_notifications" />

                <View style="@style/Divider" />

                <TextView
                    android:id="@+id/row_appearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Appearance"
                    style="@style/ProfileOptionRow"
                    app:drawableStartCompat="@drawable/ic_appearance" />

                <View style="@style/Divider" />

                <TextView
                    android:id="@+id/row_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Help Center"
                    style="@style/ProfileOptionRow"
                    app:drawableStartCompat="@drawable/ic_help" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sign_out"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sign Out"
            style="@style/Widget.App.Button.Stroked"
            android:textColor="@color/figma_red_error"
            app:strokeColor="@color/figma_red_error"
            app:strokeWidth="1dp"
            android:layout_marginTop="32dp"
            app:cornerRadius="12dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>