<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/screen_background_light_blue"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- "Prettier" Welcome Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profile_card"
            android:layout_width="0dp"
            android:layout_height="129dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_profile_card_gradient">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/profile_image"
                    android:background="@drawable/bg_profile_image_circle"
                    android:padding="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Profile Picture"/>

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Welcome, David!"
                    style="@style/TextAppearance.ProfileCard.Name"
                    app:layout_constraintTop_toTopOf="@id/profile_image"
                    app:layout_constraintStart_toEndOf="@id/profile_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:id="@+id/profile_role"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="What would you like to learn today?"
                    style="@style/TextAppearance.ProfileCard.Role"
                    app:layout_constraintTop_toBottomOf="@id/profile_name"
                    app:layout_constraintStart_toStartOf="@id/profile_name"
                    app:layout_constraintEnd_toEndOf="@id/profile_name" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <!-- "Start Learning" Subtitle -->
        <TextView
            android:id="@+id/screen_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Learning"
            style="@style/TextAppearance.ScreenSubtitle"
            app:layout_constraintTop_toBottomOf="@id/profile_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp" />

        <!-- === HISTORY SECTION === -->

        <TextView
            android:id="@+id/history_section_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Recent Papers"
            style="@style/TextAppearance.Home.SectionTitle"
            app:layout_constraintTop_toBottomOf="@id/screen_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/view_more_button"
            android:layout_marginTop="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/view_more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View more"
            style="@style/TextAppearance.Home.ViewMore"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp"
            app:layout_constraintBaseline_toBaselineOf="@id/history_section_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" />


        <FrameLayout
            android:id="@+id/history_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:minHeight="170dp"
            app:layout_constraintTop_toBottomOf="@id/history_section_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- History RecyclerView (Now inside FrameLayout) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/history_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingEnd="16dp"
                tools:paddingStart="0dp"
                android:minHeight="170dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/list_item_history"
                android:visibility="gone" /> <!-- Starts GONE, logic will show it -->

            <!-- "EMPTY" HISTORY VIEW (Now inside FrameLayout) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/empty_history_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:id="@+id/rv_recent_history"
                    android:background="@drawable/bg_profile_card_gradient">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Your history will show up here!"
                        android:textColor="@color/white"
                        style="@style/TextAppearance.Home.CardTitle"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Upload a link or file to get started."
                        android:textColor="#CCFFFFFF"
                        style="@style/TextAppearance.Body.Onboarding"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </FrameLayout>


        <!-- === UPLOAD BUTTONS SECTION === -->
        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/history_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Card 1: Upload File -->
            <androidx.cardview.widget.CardView
                android:id="@+id/upload_file_button"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_upload_file_themed"
                        android:contentDescription="Upload File Icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload File"
                        style="@style/TextAppearance.Home.CardTitle"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: Upload Link -->
            <androidx.cardview.widget.CardView
                android:id="@+id/upload_link_button"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/white"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_upload_link_themed"
                        android:contentDescription="Upload Link Icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Link"
                        style="@style/TextAppearance.Home.CardTitle"
                        android:layout_marginStart="20dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>