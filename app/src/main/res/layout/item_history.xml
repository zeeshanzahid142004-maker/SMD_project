<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="#F0F0F0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_quiz_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Quiz Title"
                style="@style/TextAppearance.Home.CardTitle"
                android:textColor="@color/text_primary_dark"
                android:textSize="18sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Retake Badge -->
            <TextView
                android:id="@+id/tv_retake_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_difficulty_normal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="ðŸ”„ Retake #2"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"
                android:layout_marginEnd="8dp"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_favorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_favorite_border"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/figma_purple_main"
                android:contentDescription="Favorite"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score"
                    style="@style/TextAppearance.Body.Small.Medium"
                    android:textColor="@color/text_secondary_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="8/10"
                    style="@style/TextAppearance.Body.Small.Bold"
                    android:textColor="@color/text_primary_dark"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="#E0E0E0"
                android:layout_marginHorizontal="8dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Performance"
                    style="@style/TextAppearance.Body.Small.Medium"
                    android:textColor="@color/text_secondary_gray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="80%"
                    style="@style/TextAppearance.Body.Small.Bold"
                    android:textColor="@color/figma_green_correct"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Jan 15, 2025 â€¢ 02:30 PM"
            style="@style/TextAppearance.Body.Small.Medium"
            android:textColor="@color/text_secondary_gray"
            android:textSize="12sp"
            android:layout_marginBottom="16dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Offline Download"
            style="@style/TextAppearance.Button.Large"
            android:textColor="@color/white"
            android:background="@drawable/bg_sign_up_gradient"
            app:backgroundTint="@null"
            app:icon="@drawable/ic_download"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:cornerRadius="12dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>