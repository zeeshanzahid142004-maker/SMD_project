<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_option"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/figma_purple_main"
    app:strokeWidth="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="#2D2D2D"> <!-- Changed to a Dark Grey default to match your screenshot -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_option_letter"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:background="@drawable/bg_option_circle"
                android:textColor="@color/figma_purple_main"
                android:textStyle="bold"
                android:layout_marginEnd="16dp"
                tools:text="A"/>

            <!-- FIXED: Changed textColor to white -->
            <TextView
                android:id="@+id/tv_option_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/TextAppearance.Body.Small.Medium"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="The method is the entry point."/>

            <ImageView
                android:id="@+id/iv_option_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:visibility="invisible"
                android:alpha="0"
                android:scaleX="0.5"
                android:scaleY="0.5"
                tools:visibility="visible"
                tools:src="@drawable/ic_correct_check"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingStart="48dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="#4CAF50"
            style="@style/TextAppearance.Body.Small.Medium"
            tools:text="This is correct because the JVM always starts execution here."/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>