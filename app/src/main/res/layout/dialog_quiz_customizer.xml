<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiz_customizer_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_dark"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/dialog_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiz_customizer_subtitle"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginBottom="16dp"/>

        <!-- Number of Questions Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num_questions_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_dark"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rg_num_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_questions_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textSize="14sp"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_questions_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:textSize="14sp"
                android:checked="true"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_questions_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10"
                android:textSize="14sp"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_questions_15"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15"
                android:textSize="14sp"/>

        </RadioGroup>

        <!-- Difficulty Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/difficulty_label"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_dark"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rg_difficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_easy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/difficulty_easy"
                android:textSize="12sp"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/difficulty_medium"
                android:textSize="12sp"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_hard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/difficulty_hard"
                android:textSize="12sp"/>

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_mix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/difficulty_mix"
                android:textSize="12sp"
                android:checked="true"/>

        </RadioGroup>

        <!-- Include Coding Questions Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/include_coding_label"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_dark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/include_coding_hint"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"/>

            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_coding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"/>

        </LinearLayout>

        <!-- Quiz Language Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@drawable/bg_info_box"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_language"
                android:layout_marginEnd="12dp"
                app:tint="@color/figma_purple_main"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quiz_language_label"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary_dark"/>

                <TextView
                    android:id="@+id/tv_selected_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="English"
                    android:textSize="12sp"
                    android:textColor="@color/figma_purple_main"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/cancel"
                app:strokeColor="@color/figma_purple_main"
                android:textColor="@color/figma_purple_main"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_generate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/generate_quiz"
                android:backgroundTint="@color/figma_purple_main"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
