<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ForgotPasswordActivity">

    <!-- REMOVED: Fake status bar, home indicator, back button, and static check icon -->

    <ImageView
        android:id="@+id/forgot_pass_illustration"
        android:layout_width="0dp"
        android:layout_height="333dp"
        android:src="@drawable/illustration_forgot_password"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:contentDescription="Illustration for forgot password"/>

    <TextView
        android:id="@+id/forgot_pass_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        style="@style/TextAppearance.Header.Small"
        app:layout_constraintTop_toBottomOf="@id/forgot_pass_illustration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@+id/forgot_pass_body"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="Enter your email address below to reset your password"
        style="@style/TextAppearance.Body.Faded"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/forgot_pass_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/email_input"
        android:layout_width="328dp"
        android:layout_height="60dp"
        style="@style/Widget.App.EditText"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/forgot_pass_body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="38dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/send_email_button"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:text="Send Email"
        style="@style/TextAppearance.Button.Large"
        android:background="@drawable/bg_sign_up_gradient"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/email_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>