<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        tools:context=".signin_activity">

        <!-- Guidelines -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.08"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.92"/>

        <!-- Illustration -->
        <ImageView
            android:id="@+id/log_in_illustration"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/log_in_illustration"
            android:contentDescription="Illustration of person logging in"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            app:layout_constraintHeight_percent="0.30"
            android:layout_marginTop="32dp"/>

        <!-- Title -->
        <TextView
            android:id="@+id/sign_in_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            style="@style/TextAppearance.Header.Small"
            app:layout_constraintTop_toBottomOf="@id/log_in_illustration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- ✅ Email Input with TextInputLayout for feedback -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/email"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="@color/text_input_box_stroke"
            app:boxStrokeErrorColor="@color/figma_red_error"
            app:errorEnabled="true"
            app:errorIconDrawable="@drawable/ic_error"
            app:errorTextColor="@color/figma_red_error"
            app:startIconDrawable="@drawable/ic_email"
            app:startIconTint="@color/text_secondary_gray"
            app:hintTextColor="@color/figma_purple_main"
            app:layout_constraintTop_toBottomOf="@id/sign_in_title"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            android:layout_marginTop="20dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:textSize="16sp"
                android:textColor="@color/text_primary_dark"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- ✅ Password Input with TextInputLayout for feedback -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="@string/password"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="@color/text_input_box_stroke"
            app:boxStrokeErrorColor="@color/figma_red_error"
            app:errorEnabled="true"
            app:errorIconDrawable="@null"
            app:errorTextColor="@color/figma_red_error"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/text_secondary_gray"
            app:endIconMode="password_toggle"
            app:endIconDrawable="@drawable/ic_eye_invisible"
            app:endIconTint="@color/text_secondary_gray"
            app:hintTextColor="@color/figma_purple_main"
            app:layout_constraintTop_toBottomOf="@id/email_input_layout"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:textSize="16sp"
                android:textColor="@color/text_primary_dark"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/forgot_password_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password"
            style="@style/TextAppearance.Link.ForgotPassword"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/password_input_layout"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            android:layout_marginTop="8dp"/>

        <!-- Log In Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/log_in_button"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:text="@string/log_in"
            style="@style/TextAppearance.Button.Large"
            android:background="@drawable/bg_sign_up_gradient"
            app:backgroundTint="@null"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/forgot_password_link"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            android:layout_marginTop="16dp"/>

        <!-- Google Sign In Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/google_sign_in_button"
            android:layout_width="0dp"
            android:layout_height="58dp"
            style="@style/Widget.App.Button.Stroked"
            android:text="@string/sign_in_with_google"
            app:icon="@drawable/ic_google_logo"
            app:iconPadding="16dp"
            app:iconGravity="textStart"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/log_in_button"
            app:layout_constraintStart_toStartOf="@id/guideline_start"
            app:layout_constraintEnd_toEndOf="@id/guideline_end"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_gradient_secondver"
            android:backgroundTint="@null"/>

        <!-- Sign Up Prompt -->
        <LinearLayout
            android:id="@+id/sign_up_prompt_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/google_sign_in_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/sign_up_prompt_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dont_have_account"
                style="@style/TextAppearance.Body.Small.Medium"/>

            <TextView
                android:id="@+id/sign_up_prompt_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up"
                style="@style/TextAppearance.Body.Small.Bold"
                android:textColor="@color/figma_purple_main"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>