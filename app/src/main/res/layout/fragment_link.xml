<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9000000"
    tools:context=".fragments.linkFragment">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/enter_link_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="28dp"
            app:cardElevation="16dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:background="@drawable/gradient_book_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_link"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="24dp"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="4"
                    android:shadowRadius="8"/>

                <EditText
                    android:id="@+id/linkInput"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="@string/paste_link_hint"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/bg_glass_input"
                    android:textColor="@android:color/white"
                    android:textColorHint="#CCFFFFFF"
                    android:textSize="15sp"
                    android:inputType="textUri"
                    android:drawableStart="@drawable/ic_link"
                    android:drawableTint="@android:color/white"
                    android:drawablePadding="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pasteButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="24dp"
                    android:text="@string/go"
                    android:textColor="@color/figma_purple_main"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:backgroundTint="@android:color/white"
                    app:cornerRadius="30dp"
                    app:elevation="8dp"
                    android:stateListAnimator="@null" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/loading_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="28dp"
            app:cardElevation="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:minHeight="300dp"
                android:background="@drawable/gradient_book_background">

                <ProgressBar
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:indeterminateTint="@android:color/white"/>

                <TextView
                    android:id="@+id/tv_loading_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/processing"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"/>

                <TextView
                    android:id="@+id/tv_loading_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/extracting_video"
                    android:textColor="#CCFFFFFF"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/confirmation_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="28dp"
            app:cardElevation="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:background="@drawable/gradient_book_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ready"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="32dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/quiz_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="@string/take_quiz"
                    android:textColor="@color/figma_purple_main"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:backgroundTint="@android:color/white"
                    app:cornerRadius="30dp"
                    app:icon="@drawable/ic_school"
                    app:iconTint="@color/figma_purple_main"
                    app:iconGravity="textStart"
                    app:elevation="6dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/rewatch_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/watch_video"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@android:color/white"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@android:color/transparent"
                    app:cornerRadius="30dp"
                    app:icon="@drawable/ic_play_circle"
                    app:iconTint="@android:color/white"
                    app:iconGravity="textStart"
                    app:rippleColor="#40FFFFFF" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>